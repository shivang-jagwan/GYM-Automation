# =============================================================================
# GYM MANAGEMENT SYSTEM - Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For Supabase PostgreSQL (recommended for production)
DB_NAME=postgres
DB_USER=your_supabase_user
DB_PASSWORD=your_secure_password_here
DB_HOST=your-project.pooler.supabase.com
DB_PORT=5432
DB_SSL_MODE=require

# For local PostgreSQL development
# DB_NAME=gym_db
# DB_USER=postgres
# DB_PASSWORD=your_local_password
# DB_HOST=localhost
# DB_PORT=5432
# DB_SSL_MODE=disable

# =============================================================================
# DJANGO SETTINGS
# =============================================================================
# Generate a new secret key for production:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-super-secret-key-change-in-production

# Set to False in production!
DEBUG=True

# Allowed hosts (comma-separated, no spaces)
# Add your production domain here
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS allowed origins (comma-separated, no spaces)
# Add your Netlify frontend URL here
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# NOTIFICATION SYSTEM
# =============================================================================
# Provider options: mock, msg91, twilio
# 'mock' logs to console (good for development)
NOTIFICATION_PROVIDER=mock

# Your gym name (appears in notification messages)
GYM_NAME=FitZone Gym

# =============================================================================
# SMS PROVIDER CREDENTIALS (if using real SMS)
# =============================================================================
# MSG91
# MSG91_API_KEY=your_msg91_api_key
# MSG91_SENDER_ID=GYMFIT

# Twilio
# TWILIO_ACCOUNT_SID=your_twilio_sid
# TWILIO_AUTH_TOKEN=your_twilio_token
# TWILIO_PHONE_NUMBER=+1234567890
